<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/bar"
        android:background="@color/colorSecondary"
        android:layout_margin="1dp"
        android:padding="3dp">
        <TextView
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/viewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="10sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewContractId"
            app:layout_constraintStart_toStartOf="@id/viewTitle"
            app:layout_constraintTop_toBottomOf="@id/viewTitle"
            app:layout_constraintEnd_toStartOf="@id/viewPrice"
            android:text="id"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewPrice"
            app:layout_constraintStart_toEndOf="@id/viewContractId"
            app:layout_constraintEnd_toStartOf="@id/viewVolume"
            app:layout_constraintTop_toBottomOf="@id/viewTitle"
            android:text="price"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewVolume"
            app:layout_constraintStart_toEndOf="@id/viewPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewTitle"
            android:text="volume"
            android:textColor="@color/white"/>

        <TextView
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewDateIssued"
            app:layout_constraintStart_toStartOf="@+id/viewContractId"
            app:layout_constraintTop_toBottomOf="@id/viewContractId"
            app:layout_constraintEnd_toStartOf="@id/viewDateExpired"
            android:text="Date Issued"
            android:textColor="@color/white"/>
        <TextView
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewDateExpired"
            app:layout_constraintStart_toEndOf="@id/viewDateIssued"
            app:layout_constraintTop_toTopOf="@id/viewDateIssued"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Date Expired"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewDateIssued"
            android:text="location"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/itemsRV"
        app:layout_constraintTop_toBottomOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:id="@+id/fab"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_reply_24"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:id="@+id/fabShare"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/fab"
        app:layout_constraintEnd_toEndOf="@id/fab"
        app:layout_constraintStart_toStartOf="@id/fab"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_send_24"
        android:visibility="invisible"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:id="@+id/fabSave"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/fabShare"
        app:layout_constraintEnd_toEndOf="@id/fab"
        app:layout_constraintStart_toStartOf="@id/fab"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_star_border_24"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>