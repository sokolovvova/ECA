<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorSecondary"
    android:layout_margin="1dp"
    android:padding="3dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintHorizontal_weight="2"
        android:id="@+id/viewTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewTextPrice"
        android:textColor="@color/white"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/viewTextLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewTextTitle"
        app:layout_constraintStart_toStartOf="@id/viewTextTitle"
        app:layout_constraintEnd_toEndOf="@id/viewTextTitle"
        android:textColor="@color/white"
        android:maxLines="2"
        android:textSize="10sp"/>
    <TextView
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/viewTextPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewTextTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:maxLines="1"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/viewTextVolume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/viewTextPrice"
        android:textColor="@color/white"
        android:maxLines="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>